plasticN <- plastic %>% 
  mutate(month = month(Time, label = FALSE), year = as.integer(year(Time))) %>% 
  filter(year > 2010) %>% 
  group_by(year, category, month) %>%
  summarise(`Total Quantity` = sum(Quantity))




